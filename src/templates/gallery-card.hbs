{{#each this}}
<div class="photo-card gallery__item" >
  <a class="gallery__modal" href="{{largeImageURL}}"><img src="{{webformatURL}}" alt="{{tags}}" loading="lazy"/></a>
  <div class="info">
    <p class="info-item">
      <b>Likes </b>{{likes}}
    </p>
    <p class="info-item">
      <b>Views </b>{{views}}
    </p>
    <p class="info-item">
      <b>Comments </b>{{comments}}
    </p>
    <p class="info-item">
      <b>Downloads </b>{{downloads}}
    </p>
  </div>
</div>
{{/each}}